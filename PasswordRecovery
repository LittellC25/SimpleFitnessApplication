        <h2>Password Recovery</h2>
        <p>Enter your username to recover your password.</p>
        <form id="password-recovery-form">
            <input type="text" id="username" placeholder="Enter your username" required>
            <button type="button" onclick="recoverPassword()">Recover Password</button>
        </form>
        <p id="recovery-message"></p>
    </div>

    <script>
        function recoverPassword() {
            var username = document.getElementById('username').value;
            var recoveryMessage = document.getElementById('recovery-message');

            // Backend request would go here
            // For now just using simple message.

            recoveryMessage.textContent = `Password recovery instructions sent to ${username}. Check your email.`;
        }
    </script>
